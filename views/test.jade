																var extraRoadAddr = ''; // 참고 항목 변수

																
																	
																var se ='';
																if(data.sido == '서울'){
																		se = '서울특별시'
																}
																if(data.sido == '충남'){
																		se = '충청남도'
																}
																if(data.sido == '인천'){
																		se = '인천광역시'
																}
																if(data.sido == '충북'){
																		se = '충청북도'
																}
																if(data.sido == '부산'){
																		se = '부산광역시'
																}
																if(data.sido == '대전'){
																		se = '대전광역시'
																}
																if(data.sido == '광주'){
																		se = '광주광역시'
																}
																if(data.sido == '대구'){
																		se = '대구광역시'
																}
																if(data.sido == '경기'){
																		se = '서울특별시'
																}
																// 우편번호와 주소 정보를 해당 필드에 넣는다.
																document.getElementById('sample4_postcode').value = se +' ' + data.sigungu+ ' ' + data.bname;
																document.getElementById('bulding').value = data.buildingName;
																document.getElementById('maindata').value = data.bname.replace('동','');  
																document.getElementById('checkdata').value = data.sido;
														}
												}).open();
										}                   
																											
